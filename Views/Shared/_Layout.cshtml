@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.IdentityModel.Tokens
@{
    // Helper function to check active route
    string IsActive(string controller, string action = "")
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        
        bool controllerMatch = string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase);
        bool actionMatch = action.IsNullOrEmpty() || string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase);
        return (controllerMatch && actionMatch) ? "active" : "";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulkyBooksWeb</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/bootswatch/sketchy.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulkyBooksWeb.styles.css" asp-append-version="true" />
    
    <!-- Add Font Awesome for icons -->
	<script src="https://kit.fontawesome.com/75c9ecad4c.js" ></script>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BulkyBooksWeb</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @IsActive("Home", "Index")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("Category")" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("Book")" asp-area="" asp-controller="Book" asp-action="Index">Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @IsActive("Home", "Privacy")" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center text-white">
                        @if (User.IsInRole("admin")) {
                            <i class="fas fa-user-tie me-2" style="font-size: 1.5rem;"></i> 
                        }
                        @if (User.IsInRole("author")) {
                            <i class="fas fa-feather me-2" style="font-size: 1.5rem;"></i> 
                        }
                        @if (User.IsInRole("user")) {
                            <i class="fas fa-user-circle me-2" style="font-size: 1.5rem;"></i> 
                        }
                        <span>Welcome, @User.Identity.Name!</span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="form-inline">
                            <button type="submit" class="btn btn-danger d-flex ms-3 align-items-center gap-2">
                                <span>Logout</span>
                                <i class="fas fa-sign-out-alt" style="font-size: 1.5rem;"></i>
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="navbar-nav">
                        <button class="nav-item btn btn-primary  me-2" type="button">
                            <a class="nav-link text-white @IsActive("Auth", "Login")" asp-area="" asp-controller="Auth" asp-action="Login">Join</a>
                        </button>
                    </div>
                }
                @* <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form> *@
            </div>
            </div>
         </nav>

        </header>
            @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home"
                 && ViewContext.RouteData.Values["controller"]?.ToString() != "Auth" )
            {
            <ol class="breadcrumb mt-3" aria-label="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">
                <a asp-area="" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index">
                    @ViewContext.RouteData.Values["controller"]
                </a>
                </li>
                <li class="breadcrumb-item active">
                @ViewContext.RouteData.Values["action"]
                </li>
            </ol>
            }
    <div class="container">
        @if (TempData["success"] != null)
        {
            <div class="alert alert-dismissible alert-success position-fixed top-6 end-0 m-3" role="alert" style="z-index: 1050;">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @TempData["success"]
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-dismissible alert-danger position-fixed top-6 end-0 m-3" role="alert" style="z-index: 1050;">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @TempData["error"]
            </div>
        }
        <main role="main" class="pb-3" style="min-height: 80dvh;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-2 ">
        <div class="container">
            &copy; 2025 - BulkyBooksWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
