@model BulkyBooksWeb.Models.ViewModels.BookCreateViewModel
@{
    ViewData["Title"] = "Create Book";
}

<div class="container py-4">
    <div class="card border-dark">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Create New Book</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Book" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Left Column - Cover Image -->
                    <div class="col-md-4 mb-4">
                        <div class="card border-success h-100">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-image me-2"></i> Book Cover</h5>
                            </div>
                            <div class="card-body text-center d-flex flex-column justify-content-between">
                                <div>
                                    <div class="border border-dark rounded d-flex justify-content-center align-items-center bg-light mb-3" 
                                         id="coverPlaceholder" style="height: 250px;">
                                        <div class="text-center p-4">
                                            <i class="fas fa-book fa-4x text-muted mb-3"></i>
                                            <p class="text-muted">No cover image</p>
                                        </div>
                                    </div>
                                    <img id="coverPreview" class="img-fluid rounded mb-3" style="max-height: 250px; display: none;" alt="Book cover preview" />
                                </div>
                                
                                <div class="mt-3">
                                    <div class="mb-3">
                                        <label asp-for="CreateBookDto.CoverImageUrl" class="form-label">Cover Image URL</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-link"></i></span>
                                            <input asp-for="CreateBookDto.CoverImageUrl" id="coverImageUrl" class="form-control" 
                                                   placeholder="Enter image URL" />
                                        </div>
                                        <span asp-validation-for="CreateBookDto.CoverImageUrl" class="text-danger"></span>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Right Column - Book Details -->
                    <div class="col-md-8">
                        <div class="card border-info h-100">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0"><i class="fas fa-book-open me-2"></i> Book Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8 mb-3">
                                        <label asp-for="CreateBookDto.Title" class="form-label">Title</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                            <input asp-for="CreateBookDto.Title" id="bookTitle" class="form-control" required 
                                                   placeholder="Enter book title" />
                                        </div>
                                        <span asp-validation-for="CreateBookDto.Title" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="CreateBookDto.Price" class="form-label">Price ($)</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                            <input asp-for="CreateBookDto.Price" class="form-control" type="number" 
                                                   step="0.01" min="0" required placeholder="0.00" />
                                        </div>
                                        <span asp-validation-for="CreateBookDto.Price" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="CreateBookDto.Description" class="form-label">Description</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                        <textarea asp-for="CreateBookDto.Description" class="form-control" rows="4" 
                                                  placeholder="Enter book description"></textarea>
                                    </div>
                                    <span asp-validation-for="CreateBookDto.Description" class="text-danger"></span>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="CreateBookDto.ISBN" class="form-label">ISBN</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                            <input asp-for="CreateBookDto.ISBN" id="bookISBN" class="form-control" 
                                                   placeholder="Enter ISBN" />
                                        </div>
                                        <span asp-validation-for="CreateBookDto.ISBN" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="CreateBookDto.PublishedDate" class="form-label">Published Date</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                            <input asp-for="CreateBookDto.PublishedDate" type="date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="CreateBookDto.PublishedDate" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="CreateBookDto.CategoryId" class="form-label">Category</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <select asp-for="CreateBookDto.CategoryId" 
                                                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" 
                                                class="form-select" required>
                                            <option disabled selected>-- Select Category --</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="CreateBookDto.CategoryId" class="text-danger"></span>
                                </div>
                                
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input asp-for="CreateBookDto.IsFeatured" class="form-check-input" type="checkbox" />
                                            <label asp-for="CreateBookDto.IsFeatured" class="form-check-label">
                                                <i class="fas fa-star text-warning me-1"></i> Mark as Featured Book
                                            </label>
                                        </div>
                                        <small class="form-text text-muted">Featured books will be displayed prominently on the homepage.</small>
                                        <span asp-validation-for="CreateBookDto.IsFeatured" class="text-danger"></span>
                                    </div>
                                }
                                
                                <div class="mb-3">
                                    <label asp-for="CreateBookDto.PdfFile" class="form-label">
                                        <i class="fas fa-file-pdf text-danger me-1"></i> Book PDF File
                                    </label>
                                    <input asp-for="CreateBookDto.PdfFile" type="file" class="form-control" accept=".pdf" />
                                    <small class="form-text text-muted">Upload the PDF version of your book (optional)</small>
                                    <span asp-validation-for="CreateBookDto.PdfFile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-4 p-3 border border-dark rounded" style="border-style: dashed !important;">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-1"></i> Create Book
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Add Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    
    <script>
        // Preview the cover image when URL changes
        document.getElementById('coverImageUrl').addEventListener('blur', function() {
            const imageUrl = this.value.trim();
            const previewElement = document.getElementById('coverPreview');
            const placeholderElement = document.getElementById('coverPlaceholder');
            
            if (imageUrl) {
                previewElement.src = imageUrl;
                previewElement.style.display = 'block';
                placeholderElement.style.display = 'none';
            } else {
                previewElement.style.display = 'none';
                placeholderElement.style.display = 'flex';
            }
        });
        
        </script>
}