@section Scripts {
    <!-- Add Slick Carousel for featured books -->
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Initialize featured books carousel
            $('.featured-books-carousel').slick({
                dots: true,
                infinite: true,
                speed: 300,
                slidesToShow: 4,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 3000,
                responsive: [
                    {
                        breakpoint: 1200,
                        settings: {
                            slidesToShow: 3
                        }
                    },
                    {
                        breakpoint: 992,
                        settings: {
                            slidesToShow: 2
                        }
                    },
                    {
                        breakpoint: 576,
                        settings: {
                            slidesToShow: 1
                        }
                    }
                ]
            });
            
            // Toggle between grid and list view
            $('#gridViewBtn').click(function() {
                $(this).addClass('active');
                $('#listViewBtn').removeClass('active');
                $('#gridView').removeClass('d-none');
                $('#listView').addClass('d-none');
            });
            
            $('#listViewBtn').click(function() {
                $(this).addClass('active');
                $('#gridViewBtn').removeClass('active');
                $('#listView').removeClass('d-none');
                $('#gridView').addClass('d-none');
            });
            
            // Category filter from featured categories
            $('.category-filter').click(function(e) {
                e.preventDefault();
                var categoryId = $(this).data('category-id');
                
                // Check the corresponding checkbox
                $('#category-' + categoryId).prop('checked', true);
                
                $('#filterForm').submit();
            });
            
            // Remove filter functionality
            $('.remove-filter').click(function(e) {
                e.preventDefault();
                var filterType = $(this).data('filter-type');
                
                switch(filterType) {
                    case 'search':
                        $('#searchQuery').val('');
                        break;
                    case 'category':
                        var categoryId = $(this).data('category-id');
                        $('#category-' + categoryId).prop('checked', false);
                        break;
                    case 'min-price':
                        $('input[name="MinPrice"]').val('');
                        break;
                    case 'max-price':
                        $('input[name="MaxPrice"]').val('');
                        break;
                }
                
                // Submit the form to apply the updated filters
                $('#filterForm').submit();
            });
            

            $('.add-to-cart').click(function() {
                var bookId = $(this).data('book-id');
                $.ajax({
                    url: '@Url.Action("AddToCart", "Home", new { id = "__bookId__" })'.replace('__bookId__', bookId),
                    type: 'POST',
                    success: function(response) {
                        alert('Book added to cart!');
                    },
                    error: function(xhr, status, error) {
                        console.error(xhr);
                        alert('Error adding book to cart. Please try again.');
                        window.location.href = '@Url.Action("Login", "Auth")';
                    }
                });
            });
        });
    </script>
}