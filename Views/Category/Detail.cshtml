@using System.Collections
@using BulkyBooksWeb.Models
@model Category

@{
    ViewData["Title"] = Model.Name + " | Category Detail";

	// Sample data for demonstration purposes
	var Books = new List<Book>(){
		
		new Book { Id = 1, Title = "Book 1", Author = "Author 1", ISBN = "1234567890", Price = 19.99m, PublishedDate = DateTime.Now, CategoryId = 1 },
		new Book { Id = 2, Title = "Book 2", Author = "Author 2", ISBN = "0987654321", Price = 29.99m, PublishedDate = DateTime.Now, CategoryId = 2 },
		new Book { Id = 3, Title = "Book 3", Author = "Author 3", ISBN = "1122334455", Price = 39.99m, PublishedDate = DateTime.Now, CategoryId = 3 }	
		};
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4>Category Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Display Order:</dt>
                        <dd class="col-sm-8">@Model.DisplayOrder</dd>
                    </dl>
                </div>
                <div class="col-md-6 text-end">
                    <button
							class="btn btn-primary btn-sm edit-button"
							data-id="@Model.Id"
							data-bs-toggle="modal" 
							data-bs-target=".modal-edit-category">
						Edit
					</button>
					<form asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
						<button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
					</form>                
				</div>
            </div>

            <h4>Books in this Category</h4>
            @if (Model.Books?.Any() == true)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Book Title</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Books)
                        {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.Author</td>
                                    <td>@book.Price.ToString("C")</td>
                                    <td>
                                        <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id" 
                                           class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No books found in this category</div>
            }
        </div>
    </div>
	
	@await Html.PartialAsync("_EditCategoryModal", Model)
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}