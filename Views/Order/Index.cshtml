@model BulkyBooksWeb.Models.ViewModels.OrderManagementViewModel
@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Order Management</h1>
        <div class="btn-group">
            <a asp-controller="Order" asp-action="PrintOrders" class="btn btn-outline-primary" target="_blank">
                <i class="fas fa-print me-2"></i> Print
            </a>
            <a asp-controller="Order" asp-action="ExportOrders" class="btn btn-outline-success">
                <i class="fas fa-file-excel me-2"></i> Export
            </a>
        </div>
    </div>
    
    <!-- Order Statistics -->
    <div class="row mb-4">
        <div class="row mb-4">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Orders (Monthly)
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.TotalOrdersMonthly</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Revenue (Monthly)
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.MonthlyRevenue.ToString("C")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Pending Orders
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.PendingOrders</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Completed Orders
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.CompletedOrders</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-danger border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Cancelled Orders
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.CancelledOrders</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-info border-dark h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Refunded Orders
                                </div>
                                <div class="h5 mb-0 font-weight-bold">@Model.RefundedOrders</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-undo fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    <!-- Filter and Search Section -->
    <div class="card border-dark mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-filter me-2"></i> Filter Orders
            </h5>
        </div>
        <div class="card-body">
            <form asp-controller="Order" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label asp-for="OrderFilter.OrderId" class="form-label">Order ID</label>
                    <input asp-for="OrderFilter.OrderId" class="form-control" id="orderId" placeholder="Order #">
                </div>
                <div class="col-md-3">
                    <label asp-for="OrderFilter.CustomerName" class="form-label">Customer</label>
                    <input asp-for="OrderFilter.CustomerName" class="form-control" id="customerName" placeholder="username">
                </div>
                <div class="col-md-2">
                    <label asp-for="OrderFilter.DateFrom" class="form-label">Date From</label>
                    <input asp-for="OrderFilter.DateFrom" class="form-control" id="dateFrom">
                </div>
                <div class="col-md-2">
                    <label asp-for="OrderFilter.DateTo" class="form-label">Date To</label>
                    <input asp-for="OrderFilter.DateTo" class="form-control" id="dateTo">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Orders Table -->
    <div class="card border-dark">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-cart me-2"></i> Orders
                </h5>
                <span class="badge bg-primary">@Model.Orders.Count() Orders</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll" onclick="toggleAllCheckboxes()">
                                </div>
                            </th>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input order-checkbox" type="checkbox" name="selectedOrders" value="@order.Id">
                                    </div>
                                </td>
                                <td><strong>#@order.Id</strong></td>
                                <td>
                                    <div>@order.User.FullName</div>
                                    <small class="text-muted">@@@order.User.Username</small>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>@order.OrderItems.Count()</td>
                                <td>@order.OrderTotal.ToString("C")</td>
                                <td>
                                    <span class="badge 
                                        @(order.Status.ToString() == "Pending" ? "bg-warning" : 
                                          order.Status.ToString() == "Completed" ? "bg-success" : 
                                          order.Status.ToString() == "Cancelled" ? "bg-danger" : 
                                          order.Status.ToString() == "Refunded" ? "bg-info" : "bg-secondary")">
                                        @order.Status.ToString()
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Order" asp-action="Detail" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Order" asp-action="PrintInvoice" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-secondary" target="_blank">
                                            <i class="fas fa-print"></i>
                                        </a>
                                        <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-danger" 
                                           onclick="return confirm('Are you sure you want to delete this order? This action cannot be undone.')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <form id="bulkActionForm" asp-controller="Admin" asp-action="BulkAction" method="post">
                        <select class="form-select form-select-sm d-inline-block" name="action" style="width: auto;">
                            <option value="">-- Select Action --</option>
                            <option value="complete">Mark as Completed</option>
                            <option value="cancel">Cancel Orders</option>
                            <option value="refund">Refund Orders</option>
                            <option value="delete">Delete Orders</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary" onclick="return confirmBulkAction()">
                            Apply
                        </button>
                    </form>
                </div>
                
                <!-- Pagination -->
                <nav aria-label="Orders pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Simple function to toggle all checkboxes
        function toggleAllCheckboxes() {
            var checkboxes = document.getElementsByClassName('order-checkbox');
            var selectAllCheckbox = document.getElementById('selectAll');
            
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = selectAllCheckbox.checked;
            }
        }
        
        // Simple confirmation for bulk actions
        function confirmBulkAction() {
            var checkboxes = document.getElementsByClassName('order-checkbox');
            var checkedCount = 0;
            
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].checked) {
                    checkedCount++;
                }
            }
            
            if (checkedCount === 0) {
                alert('Please select at least one order');
                return false;
            }
            
            return confirm('Are you sure you want to perform this action on the selected orders?');
        }
        
    </script>
}