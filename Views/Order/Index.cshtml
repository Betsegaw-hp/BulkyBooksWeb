@model BulkyBooksWeb.Models.ViewModels.OrderManagementViewModel
@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Order Management</h1>
        <div class="btn-group">
            <a href="#" onclick="alert('Note implemented yet!')" class="btn btn-outline-primary" target="_blank">
                <i class="fas fa-print me-2"></i> Print
            </a>
            <a href="#" onclick="alert('Note implemented yet!')" class="btn btn-outline-success">
                <i class="fas fa-file-excel me-2"></i> Export
            </a>
        </div>
    </div>
    
    <!-- Order Statistics -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i> Order Statistics</h5>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            This Month <span class="caret"></span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item active" href="#">This Month</a>
                            <a class="dropdown-item" href="#">Last Month</a>
                            <a class="dropdown-item" href="#">This Year</a>
                            <a class="dropdown-item" href="#">All Time</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Summary Cards -->
                    <div class="row g-3 mb-4">
                        <!-- Total Orders Card -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-primary h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-primary text-uppercase fw-bold mb-1">
                                                Total Orders
                                            </h6>
                                            <h3 class="mb-0">@Model.TotalOrders</h3>
                                            <div class="text-muted small mt-1">
                                                <span class="text-success"><i class="fas fa-arrow-up"></i> 12%</span> from last month
                                            </div>
                                        </div>
                                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-shopping-bag fa-2x text-primary"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Monthly Revenue Card -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-success h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-success text-uppercase fw-bold mb-1">
                                                Monthly Revenue
                                            </h6>
                                            <h3 class="mb-0">@Model.MonthlyRevenue.ToString("C")</h3>
                                            <div class="text-muted small mt-1">
                                                <span class="text-success"><i class="fas fa-arrow-up"></i> 8%</span> from last month
                                            </div>
                                        </div>
                                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-dollar-sign fa-2x text-success"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Pending Orders Card -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-warning h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-warning text-uppercase fw-bold mb-1">
                                                Pending Orders
                                            </h6>
                                            <h3 class="mb-0">@Model.PendingOrders</h3>
                                            <div class="text-muted small mt-1">
                                                <span class="text-danger"><i class="fas fa-arrow-up"></i> 5%</span> from last month
                                            </div>
                                        </div>
                                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-clock fa-2x text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Items Sold Card -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-info h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="text-info text-uppercase fw-bold mb-1">
                                                Items Sold
                                            </h6>
                                            <h3 class="mb-0">@Model.TotalItemsSold</h3>
                                            <div class="text-muted small mt-1">
                                                <span class="text-success"><i class="fas fa-arrow-up"></i> 15%</span> from last month
                                            </div>
                                        </div>
                                        <div class="bg-light rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-box-open fa-2x text-info"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Detailed Statistics -->
                    <div class="row">
                        <!-- Order Status -->
                        <div class="col-lg-6 mb-4">
                            <div class="card border-dark h-100">
                                <div class="card-header bg-dark text-white">
                                    <h6 class="mb-0"><i class="fas fa-tasks me-2"></i> Order Status</h6>
                                </div>
                                <div class="card-body">
                                    <!-- Completed Orders -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="fw-bold text-success">Completed</span>
                                            <span class="fw-bold">@Model.CompletedOrders</span>
                                        </div>
                                        <div class="progress" style="height: 15px;">
                                            @{
                                                var completedPercentage = Model.TotalOrders > 0 ? 
                                                    (int)((double)Model.CompletedOrders / Model.TotalOrders * 100) : 0;
                                            }
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                style="width: @completedPercentage%;" 
                                                aria-valuenow="@completedPercentage" aria-valuemin="0" aria-valuemax="100">
                                                @completedPercentage%
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Pending Orders -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="fw-bold text-warning">Pending</span>
                                            <span class="fw-bold">@Model.PendingOrders</span>
                                        </div>
                                        <div class="progress" style="height: 15px;">
                                            @{
                                                var pendingPercentage = Model.TotalOrders > 0 ? 
                                                    (int)((double)Model.PendingOrders / Model.TotalOrders * 100) : 0;
                                            }
                                            <div class="progress-bar bg-warning" role="progressbar" 
                                                style="width: @pendingPercentage%;" 
                                                aria-valuenow="@pendingPercentage" aria-valuemin="0" aria-valuemax="100">
                                                @pendingPercentage%
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Cancelled Orders -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="fw-bold text-danger">Cancelled</span>
                                            <span class="fw-bold">@Model.CancelledOrders</span>
                                        </div>
                                        <div class="progress" style="height: 15px;">
                                            @{
                                                var cancelledPercentage = Model.TotalOrders > 0 ? 
                                                    (int)((double)Model.CancelledOrders / Model.TotalOrders * 100) : 0;
                                            }
                                            <div class="progress-bar bg-danger" role="progressbar" 
                                                style="width: @cancelledPercentage%;" 
                                                aria-valuenow="@cancelledPercentage" aria-valuemin="0" aria-valuemax="100">
                                                @cancelledPercentage%
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Refunded Orders -->
                                    <div>
                                        <div class="d-flex justify-content-between mb-1">
                                            <span class="fw-bold text-info">Refunded</span>
                                            <span class="fw-bold">@Model.RefundedOrders</span>
                                        </div>
                                        <div class="progress" style="height: 15px;">
                                            @{
                                                var refundedPercentage = Model.TotalOrders > 0 ? 
                                                    (int)((double)Model.RefundedOrders / Model.TotalOrders * 100) : 0;
                                            }
                                            <div class="progress-bar bg-info" role="progressbar" 
                                                style="width: @refundedPercentage%;" 
                                                aria-valuenow="@refundedPercentage" aria-valuemin="0" aria-valuemax="100">
                                                @refundedPercentage%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Revenue Breakdown -->
                        <div class="col-lg-6 mb-4">
                            <div class="card border-dark h-100">
                                <div class="card-header bg-dark text-white">
                                    <h6 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i> Revenue Breakdown</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover table-bordered">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Revenue Type</th>
                                                    <th class="text-end">Amount</th>
                                                    <th class="text-end">Percentage</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    var totalRevenue = Model.TotalCompletedRevenue + Model.PendingRevenue + Model.TotalRefundedRevenue;
                                                    var completedRevenuePercentage = totalRevenue > 0 ? 
                                                        (int)(Model.TotalCompletedRevenue / totalRevenue * 100) : 0;
                                                    var pendingRevenuePercentage = totalRevenue > 0 ? 
                                                        (int)(Model.PendingRevenue / totalRevenue * 100) : 0;
                                                    var refundedRevenuePercentage = totalRevenue > 0 ? 
                                                        (int)(Model.TotalRefundedRevenue / totalRevenue * 100) : 0;
                                                }
                                                <tr>
                                                    <td><span class="text-success fw-bold">Completed</span></td>
                                                    <td class="text-end">@Model.TotalCompletedRevenue.ToString("C")</td>
                                                    <td class="text-end">@completedRevenuePercentage%</td>
                                                </tr>
                                                <tr>
                                                    <td><span class="text-warning fw-bold">Pending</span></td>
                                                    <td class="text-end">@Model.PendingRevenue.ToString("C")</td>
                                                    <td class="text-end">@pendingRevenuePercentage%</td>
                                                </tr>
                                                <tr>
                                                    <td><span class="text-info fw-bold">Refunded</span></td>
                                                    <td class="text-end">@Model.TotalRefundedRevenue.ToString("C")</td>
                                                    <td class="text-end">@refundedRevenuePercentage%</td>
                                                </tr>
                                                <tr class="table-dark">
                                                    <td class="fw-bold">Total Revenue</td>
                                                    <td class="text-end fw-bold">@totalRevenue.ToString("C")</td>
                                                    <td class="text-end fw-bold">100%</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    
                                    <div class="mt-4">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-bold">Monthly Revenue Trend</span>
                                            <span class="badge bg-success">+8% growth</span>
                                        </div>
                                        <div class="border border-dark rounded p-2" style="height: 70px;">
                                            <!-- Simple bar chart using divs -->
                                            <div class="d-flex align-items-end h-100 gap-1">
                                                @foreach (var height in new[] { 40, 65, 45, 70, 55, 80, 75, 60, 90, 85, 95, 100 })
                                                {
                                                    <div class="sketch-bar @(height == 100 ? "active" : "")" style="height: @height%;"></div>
                                                }
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between mt-1">
                                            <small>Jan</small>
                                            <small>Dec</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Monthly Comparison Cards -->
                    <div class="row g-3">
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-primary h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-uppercase fw-bold text-primary">
                                            Monthly Orders
                                        </div>
                                        <span class="badge bg-success">+12%</span>
                                    </div>
                                    <h4 class="mb-0">@Model.TotalOrdersMonthly</h4>
                                    <div class="text-muted small mt-2">vs. @(Model.TotalOrdersMonthly - 24) last month</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-success h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-uppercase fw-bold text-success">
                                            Monthly Revenue
                                        </div>
                                        <span class="badge bg-success">+8%</span>
                                    </div>
                                    <h4 class="mb-0">@Model.MonthlyRevenue.ToString("C")</h4>
                                    <div class="text-muted small mt-2">vs. @((Model.MonthlyRevenue * 0.92m).ToString("C")) last month</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-info h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-uppercase fw-bold text-info">
                                            Avg. Order Value
                                        </div>
                                        <span class="badge bg-danger">-3%</span>
                                    </div>
                                    @{
                                        var avgOrderValue = Model.TotalOrdersMonthly > 0 ? 
                                            Model.MonthlyRevenue / Model.TotalOrdersMonthly : 0;
                                    }
                                    <h4 class="mb-0">@avgOrderValue.ToString("C")</h4>
                                    <div class="text-muted small mt-2">vs. @((avgOrderValue * 1.03m).ToString("C")) last month</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 col-lg-3">
                            <div class="card border-warning h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-uppercase fw-bold text-warning">
                                            Refund Rate
                                        </div>
                                        <span class="badge bg-success">-1.2%</span>
                                    </div>
                                    @{
                                        var refundRate = Model.TotalOrdersMonthly > 0 ? 
                                            (double)Model.RefundedOrders / Model.TotalOrdersMonthly * 100 : 0;
                                    }
                                    <h4 class="mb-0">@refundRate.ToString("0.0")%</h4>
                                    <div class="text-muted small mt-2">vs. @((refundRate + 1.2).ToString("0.0"))% last month</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filter and Search Section -->
    <div class="card border-dark mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">
                <i class="fas fa-filter me-2"></i> Filter Orders
            </h5>
        </div>
        <div class="card-body">
            <form asp-controller="Order" asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <label asp-for="OrderFilter.OrderId" class="form-label">Order ID</label>
                    <input asp-for="OrderFilter.OrderId" class="form-control" id="orderId" placeholder="Order #">
                </div>
                <div class="col-md-3">
                    <label asp-for="OrderFilter.CustomerName" class="form-label">Customer</label>
                    <input asp-for="OrderFilter.CustomerName" class="form-control" id="customerName" placeholder="username">
                </div>
                <div class="col-md-2">
                    <label asp-for="OrderFilter.DateFrom" class="form-label">Date From</label>
                    <input asp-for="OrderFilter.DateFrom" class="form-control" id="dateFrom">
                </div>
                <div class="col-md-2">
                    <label asp-for="OrderFilter.DateTo" class="form-label">Date To</label>
                    <input asp-for="OrderFilter.DateTo" class="form-control" id="dateTo">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Orders Table -->
    <div class="card border-dark">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-cart me-2"></i> Orders
                </h5>
                <span class="badge bg-primary">@Model.Orders.Count() Orders</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll" onclick="toggleAllCheckboxes()">
                                </div>
                            </th>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Date</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input order-checkbox" type="checkbox" name="selectedOrders" value="@order.Id">
                                    </div>
                                </td>
                                <td><strong>#@order.Id</strong></td>
                                <td>
                                    <div>@order.User.FullName</div>
                                    <small class="text-muted">@@@order.User.UserName</small>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>@order.OrderItems.Count()</td>
                                <td>@order.OrderTotal.ToString("C")</td>
                                <td>
                                    <span class="badge 
                                        @(order.Status.ToString() == "Pending" ? "bg-warning" : 
                                          order.Status.ToString() == "Completed" ? "bg-success" : 
                                          order.Status.ToString() == "Cancelled" ? "bg-danger" : 
                                          order.Status.ToString() == "Refunded" ? "bg-info" : "bg-secondary")">
                                        @order.Status.ToString()
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Order" asp-action="Detail" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Order" asp-action="Print" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-secondary" target="_blank">
                                            <i class="fas fa-print"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <form id="bulkActionForm">
                        <select class="form-select form-select-sm d-inline-block" name="action" style="width: auto;">
                            <option value="" disabled>-- Select Action --</option>
                            <option value="complete">Mark as Completed</option>
                            <option value="cancel">Cancel Orders</option>
                            <option value="refund">Refund Orders</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary" onclick="return confirmBulkAction()">
                            Apply
                        </button>
                    </form>
                </div>
                
                <!-- Pagination -->
                <nav aria-label="Orders pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Sketchy theme enhancements */
        .card {
            transition: transform 0.2s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        /* Custom bar chart styling */
        .sketch-bar {
            flex: 1;
            background-color: #6c757d;
            border-radius: 3px 3px 0 0;
            margin: 0 1px;
            transition: all 0.2s ease;
        }
        
        .sketch-bar:hover {
            background-color: #0d6efd;
            transform: scaleY(1.05);
        }
        
        .sketch-bar.active {
            background-color: #198754;
        }
        
        /* Progress bar enhancements */
        .progress {
            height: 15px !important;
            border: 1px solid #dee2e6;
        }
        
        .progress-bar {
            font-weight: bold;
            font-size: 0.8rem;
            line-height: 15px;
        }
        
        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 0.75rem;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const bulkActionForm = document.getElementById('bulkActionForm');

        bulkActionForm.addEventListener("submit", (e) => {
            e.preventDefault(); 
            const checkboxes = document.querySelectorAll('.order-checkbox');

            const selectedOrders = Array.from(document.querySelectorAll('.order-checkbox:checked')).map(checkbox => checkbox.value);
            if (selectedOrders.length === 0) {
                alert('Please select at least one order to perform the action.');
                return;
            }
            const action = bulkActionForm.querySelector('select[name="action"]').value;
            if (action === "") {
                alert('Please select an action to perform.');
                return;
            }
            if(confirm("Are you sure you want to perform this action on the selected orders?")) {
                const payload = {
                    action: action,
                    orderIds: selectedOrders
                };

                fetch('@Url.Action("BulkAction", "Order")', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok.');
                    }
                    return response.json();
                })
                .then(data => {
                    alert('Bulk action executed successfully.');
                    window.location.reload();
                })
                .catch(error => {
                    console.error('Bulk action error:', error);
                    alert('There was an error performing the bulk action.');
                });
            }
        });

        // Simple function to toggle all checkboxes
        function toggleAllCheckboxes() {
            var checkboxes = document.getElementsByClassName('order-checkbox');
            var selectAllCheckbox = document.getElementById('selectAll');
            
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = selectAllCheckbox.checked;
            }
        }
        
        // Simple confirmation for bulk actions
        function confirmBulkAction() {
            var checkboxes = document.getElementsByClassName('order-checkbox');
            var checkedCount = 0;
            
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].checked) {
                    checkedCount++;
                }
            }
            
            if (checkedCount === 0) {
                alert('Please select at least one order');
                return false;
            }
            
            return confirm('Are you sure you want to perform this action on the selected orders?');
        }
        
    </script>
}