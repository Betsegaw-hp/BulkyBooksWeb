@model AdminResetPasswordViewModel
@{
    ViewData["Title"] = "Reset User Password";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Reset Password for @Model.UserName
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Set a new password for user <strong>@Model.UserName</strong> (@Model.Email).
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <input asp-for="UserId" type="hidden" />
                        <input asp-for="UserName" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>New Password
                            </label>
                            <div class="input-group">
                                <input asp-for="NewPassword" type="password" class="form-control" 
                                       placeholder="Enter new password" id="newPasswordInput" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <div class="form-text">Password must be at least 6 characters long</div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" 
                                   placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="SendNotificationEmail" class="form-check-input" type="checkbox" />
                            <label asp-for="SendNotificationEmail" class="form-check-label">
                                Send notification email to user
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>Reset Password
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to User Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Password visibility toggle
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('newPasswordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });
    </script>
}
