@using System.Text.Encodings.Web
@model UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
    var jsUserName = JavaScriptEncoder.Default.Encode(Model.UserName);
}

<div class="container py-4">
    <div class="row">
        <!-- User Profile Card -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <img src="@Model.AvatarUrl" alt="User Avatar" 
                             class="rounded-circle shadow mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow" 
                             style="width: 120px; height: 120px;">
                            <span class="text-white fw-bold" style="font-size: 3rem;">@Model.FullName.FirstOrDefault()</span>
                        </div>
                    }
                    
                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted mb-2">@@@Model.UserName</p>
                    
                    <div class="mb-3">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="badge bg-@(role == "Admin" ? "danger" : role == "Author" ? "primary" : "secondary") me-1">
                                @role
                            </span>
                        }
                    </div>
                    
                    <div class="mb-3">
                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.UtcNow)
                        {
                            <span class="badge bg-danger fs-6">
                                <i class="fas fa-lock me-1"></i>Account Locked
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-check me-1"></i>Active
                            </span>
                        }
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit User
                        </a>
                        <a asp-action="ManageRoles" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-user-tag me-2"></i>Manage Roles
                        </a>
                        <a asp-action="ResetPassword" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                            <i class="fas fa-key me-2"></i>Reset Password
                        </a>
                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.UtcNow)
                        {
                            <form asp-action="UnlockUser" asp-route-id="@Model.Id" method="post" class="d-grid gap-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-warning" 
                                    onclick="return confirmUnlockUser('@jsUserName');">
                                        <i class="fas fa-unlock me-2"></i>Unlock Account
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-warning" 
                                    data-bs-toggle="modal" data-bs-target="#lockoutModal">
                                <i class="fas fa-lock me-2"></i>Lock Account
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- User Information Tabs -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="userTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" 
                                    data-bs-target="#profile" type="button" role="tab">
                                <i class="fas fa-user me-2"></i>Profile
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="security-tab" data-bs-toggle="tab" 
                                    data-bs-target="#security" type="button" role="tab">
                                <i class="fas fa-shield-alt me-2"></i>Security
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="activity-tab" data-bs-toggle="tab" 
                                    data-bs-target="#activity" type="button" role="tab">
                                <i class="fas fa-history me-2"></i>Activity
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="books-tab" data-bs-toggle="tab" 
                                    data-bs-target="#books" type="button" role="tab">
                                <i class="fas fa-book me-2"></i>Books
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="userTabsContent">
                        <!-- Profile Tab -->
                        <div class="tab-pane fade show active" id="profile" role="tabpanel">
                            <h5 class="mb-3">Personal Information</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">First Name</label>
                                        <p class="mb-0">@Model.FirstName</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Last Name</label>
                                        <p class="mb-0">@Model.LastName</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Email Address</label>
                                        <p class="mb-0">
                                            @Model.Email
                                            @if (Model.EmailConfirmed)
                                            {
                                                <span class="badge bg-success ms-2">Verified</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Unverified</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Phone Number</label>
                                        <p class="mb-0">
                                            @(Model.PhoneNumber ?? "Not provided")
                                            @if (!string.IsNullOrEmpty(Model.PhoneNumber) && Model.PhoneNumberConfirmed)
                                            {
                                                <span class="badge bg-success ms-2">Verified</span>
                                            }
                                            else if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                            {
                                                <span class="badge bg-warning text-dark ms-2">Unverified</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Account Created</label>
                                        <p class="mb-0">@Model.CreatedAt.ToString("F")</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="fw-bold text-muted">Last Login</label>
                                        <p class="mb-0">@(Model.LastLoginAt?.ToString("F") ?? "Never")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Security Tab -->
                        <div class="tab-pane fade" id="security" role="tabpanel">
                            <h5 class="mb-3">Security Settings</h5>
                            <div class="row">
                                <div class="col-12">
                                    <div class="list-group">
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Two-Factor Authentication</h6>
                                                <p class="mb-0 text-muted">Enhanced security for account access</p>
                                            </div>
                                            @if (Model.TwoFactorEnabled)
                                            {
                                                <span class="badge bg-success">Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Disabled</span>
                                            }
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Account Lockout</h6>
                                                <p class="mb-0 text-muted">Automatic lockout on failed login attempts</p>
                                            </div>
                                            @if (Model.LockoutEnabled)
                                            {
                                                <span class="badge bg-success">Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Disabled</span>
                                            }
                                        </div>
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">Failed Login Attempts</h6>
                                                <p class="mb-0 text-muted">Number of consecutive failed attempts</p>
                                            </div>
                                            <span class="badge bg-info">@Model.AccessFailedCount</span>
                                        </div>
                                        @if (Model.LockoutEnd.HasValue)
                                        {
                                            <div class="list-group-item">
                                                <h6 class="mb-1 text-warning">Account Locked</h6>
                                                <p class="mb-0 text-muted">
                                                    Locked until: @Model.LockoutEnd.Value.ToString("F")
                                                </p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Activity Tab -->
                        <div class="tab-pane fade" id="activity" role="tabpanel">
                            <h5 class="mb-3">Recent Activity</h5>
                            <div class="timeline">
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-primary"></div>
                                    <div class="timeline-content">
                                        <h6 class="timeline-title">Account Created</h6>
                                        <p class="timeline-text">User account was created</p>
                                        <small class="text-muted">@Model.CreatedAt.ToString("F")</small>
                                    </div>
                                </div>
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-success"></div>
                                        <div class="timeline-content">
                                            <h6 class="timeline-title">Last Login</h6>
                                            <p class="timeline-text">User logged into the system</p>
                                            <small class="text-muted">@Model.LastLoginAt.Value.ToString("F")</small>
                                        </div>
                                    </div>
                                }
                                @if (Model.LockoutEnd.HasValue)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-warning"></div>
                                        <div class="timeline-content">
                                            <h6 class="timeline-title">Account Locked</h6>
                                            <p class="timeline-text">Account was locked due to security reasons</p>
                                            <small class="text-muted">Locked until: @Model.LockoutEnd.Value.ToString("F")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <!-- Books Tab -->
                        <div class="tab-pane fade" id="books" role="tabpanel">
                            <h5 class="mb-3">User's Books</h5>
                            @if (Model.Books != null && Model.Books.Any())
                            {
                                <div class="row">
                                    @foreach (var book in Model.Books)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card h-100">
                                                <div class="row g-0">
                                                    <div class="col-4">
                                                        @if (!string.IsNullOrEmpty(book.CoverImagePath))
                                                        {
                                                            <img src="@book.CoverImagePath" class="img-fluid rounded-start h-100" 
                                                                 alt="@book.Title" style="object-fit: cover;">
                                                        }
                                                        else
                                                        {
                                                            <div class="bg-light d-flex align-items-center justify-content-center h-100">
                                                                <i class="fas fa-book fa-2x text-muted"></i>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="card-body p-3">
                                                            <h6 class="card-title">@book.Title</h6>
                                                            <p class="card-text">
                                                                <small class="text-muted">@book.Author</small>
                                                            </p>
                                                            <p class="card-text">
                                                                <strong>$@book.Price</strong>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No books found</h5>
                                    <p class="text-muted">This user hasn't created any books yet.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Users
                </a>
                <div>
                    <button type="button" class="btn btn-outline-danger" 
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-2"></i>Delete User
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lockout Modal -->
<div class="modal fade" id="lockoutModal" tabindex="-1" aria-labelledby="lockoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lockoutModalLabel">
                    <i class="fas fa-lock text-warning me-2"></i>Lock User Account
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="LockUser" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-body">
                    <p>Lock the account for user <strong>@Html.Encode(Model.FullName)</strong> (@Html.Encode(Model.UserName))?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This will immediately prevent the user from accessing their account.
                    </div>
                    <div class="form-group">
                        <label for="lockoutDuration" class="form-label">Lockout Duration</label>
                        <select class="form-select" name="lockoutDuration" id="lockoutDuration">
                            <option value="1">1 Hour</option>
                            <option value="24">24 Hours</option>
                            <option value="168">1 Week</option>
                            <option value="720">1 Month</option>
                            <option value="0">Permanent</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning" 
                            onclick="return confirm('Are you absolutely sure you want to lock this user account? This action will immediately block their access.')">
                        <i class="fas fa-lock me-2"></i>Lock Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the user <strong>@Model.FullName</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-warning me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmUnlockUser(userName) {
            return confirm('Are you sure you want to unlock ' + userName + '? This will immediately restore access to their account and reset failed login attempts.');
        }
    </script>
}
@section Styles {
    <style>
        .timeline {
            position: relative;
            padding: 0;
            list-style: none;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 2rem;
            padding-left: 3rem;
        }

        .timeline-marker {
            position: absolute;
            left: 0;
            top: 0.5rem;
            width: 1rem;
            height: 1rem;
            border-radius: 50%;
        }

        .timeline-item:not(:last-child)::before {
            content: '';
            position: absolute;
            left: 0.5rem;
            top: 1.5rem;
            width: 2px;
            height: calc(100% + 1rem);
            background-color: #dee2e6;
        }

        .timeline-title {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .timeline-text {
            margin-bottom: 0.25rem;
            color: #6c757d;
        }
    </style>
}
