@model IEnumerable<BulkyBooksWeb.Models.ApplicationUser>
@{
    ViewData["Title"] = "Pending KYC Submissions";
}
<h2>Pending KYC Submissions</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Submitted At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.UpdatedAt.ToString("g")</td>
            <td>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Review", new { userId = user.Id })">Review</a>
            </td>
        </tr>
    }
    </tbody>
</table>
