@model IEnumerable<BulkyBooksWeb.Models.ApplicationUser>
@{
    ViewData["Title"] = "Pending KYC Submissions";
}
<h2>Pending KYC Submissions</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Submitted At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FullName</td>
            <td>@user.Email</td>
            <td>@user.UpdatedAt.ToString("g")</td>
            <td>
                @if (user.IsKycSubmitted && user.KycStatus == KycStatus.Pending)
                {
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Review", new { userId = user.Id })">Review</a>
                }
                else if(user.KycStatus != KycStatus.Pending)
                {
                    <button type="button" class="btn btn-info btn-sm" onclick="showNote()" data-admin-note="@user.KycAdminNotes">View Note</button>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        function showNote() {
            var button = event.target;
            var note = button.getAttribute('data-admin-note');
            
            Swal.fire({
                title: 'Admin Note',
                text: note ? note : "No admin note available.",
                icon: 'info',
                confirmButtonText: 'Close'
            });
        }
    </script>
}
