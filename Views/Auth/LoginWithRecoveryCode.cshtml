@using BulkyBooksWeb.Models.ViewModels
@model TwoFactorRecoveryCodeLoginViewModel
@{
    ViewData["Title"] = "Recovery Code Login";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Recovery Code Login
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Important:</strong> Recovery codes can only be used once. 
                        After using this code, it will no longer be valid.
                    </div>

                    <p class="text-center text-muted mb-4">
                        Enter one of your recovery codes to sign in to your account.
                    </p>

                    <form asp-action="LoginWithRecoveryCode" method="post">
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }
                        
                        <input asp-for="ReturnUrl" type="hidden" />

                        <div class="form-group mb-4">
                            <label asp-for="RecoveryCode" class="form-label fw-bold">
                                <i class="fas fa-shield-alt me-2"></i>Recovery Code
                            </label>
                            <input asp-for="RecoveryCode" class="form-control text-center" 
                                   placeholder="Enter your recovery code" autocomplete="one-time-code"
                                   style="font-size: 1.2rem; letter-spacing: 0.2rem;" />
                            <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                            <div class="form-text">
                                Recovery codes are case-sensitive and typically 8-10 characters long
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In with Recovery Code
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">Have access to your authenticator app?</p>
                        <a asp-action="LoginWith2fa" 
                           asp-route-returnUrl="@Model.ReturnUrl" 
                           class="btn btn-outline-primary">
                            <i class="fas fa-mobile-alt me-2"></i>Use Authenticator Code
                        </a>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-muted">
                            <i class="fas fa-arrow-left me-1"></i>Back to Login
                        </a>
                    </div>
                </div>
            </div>

            <!-- Recovery Code Information -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>About Recovery Codes
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Recovery codes are backup access codes for your account</li>
                        <li>Each code can only be used once</li>
                        <li>Keep your recovery codes in a safe place</li>
                        <li>Generate new codes if you've used most of them</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-format and focus on recovery code input
        document.addEventListener('DOMContentLoaded', function() {
            const codeInput = document.querySelector('input[name="RecoveryCode"]');
            if (codeInput) {
                // Focus on the input field
                codeInput.focus();
                
                codeInput.addEventListener('input', function(e) {
                    // Remove spaces and convert to uppercase for consistency
                    this.value = this.value.replace(/\s/g, '').toUpperCase();
                });
            }
        });
    </script>
}
