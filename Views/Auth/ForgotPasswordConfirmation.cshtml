@{
    ViewData["Title"] = "Reset Link Sent";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-success shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Reset Link Sent
                    </h2>
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="text-center mb-4">
                        <div class="d-inline-block p-3 rounded-circle mb-3" style="background-color: #d4edda; border: 2px dashed #28a745;">
                            <i class="fas fa-envelope-open-text fa-3x text-success"></i>
                        </div>
                        <h5 class="mb-2">Check Your Email</h5>
                        <p class="text-muted">
                            If an account with that email exists, we've sent you a password reset link.
                        </p>
                    </div>

                    <!-- Instructions -->
                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-list-ol me-2 text-success"></i>
                                Next Steps:
                            </h6>
                            <ol class="mb-0">
                                <li class="mb-2">Check your email inbox (including spam/junk folder)</li>
                                <li class="mb-2">Look for an email from BulkyBooks</li>
                                <li class="mb-2">Click the "Reset Password" link in the email</li>
                                <li>Create your new password and sign in</li>
                            </ol>
                        </div>
                    </div>

                    <!-- Security Notice -->
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-shield-alt me-2"></i>
                        <strong>Security Notice:</strong> The reset link expires in 24 hours for your security.
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2 mb-4">
                        <a asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Back to Sign In
                        </a>
                        <a asp-action="ForgotPassword" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>
                            Send Another Reset Link
                        </a>
                    </div>

                    <!-- Help Section -->
                    <hr class="my-4">
                    <div class="text-center">
                        <h6 class="mb-3">Need Help?</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card border-light h-100">
                                    <div class="card-body text-center p-3">
                                        <i class="fas fa-clock fa-2x text-info mb-2"></i>
                                        <h6 class="card-title">Email Not Arriving?</h6>
                                        <p class="card-text small text-muted">
                                            Reset emails may take up to 5 minutes to arrive. Don't forget to check your spam folder.
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card border-light h-100">
                                    <div class="card-body text-center p-3">
                                        <i class="fas fa-life-ring fa-2x text-info mb-2"></i>
                                        <h6 class="card-title">Still Having Issues?</h6>
                                        <p class="card-text small text-muted">
                                            <a href="mailto:support@bulkybooks.com" class="btn btn-sm btn-outline-info">
                                                Contact Support
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
