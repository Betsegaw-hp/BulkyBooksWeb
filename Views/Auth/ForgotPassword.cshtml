@model BulkyBooksWeb.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-primary shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-key me-2"></i>
                        Forgot Password
                    </h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="d-inline-block p-3 rounded-circle mb-3" style="background-color: #cce7ff; border: 2px dashed #007bff;">
                            <i class="fas fa-lock-open fa-3x text-primary"></i>
                        </div>
                        <h5 class="mb-2">Reset Your Password</h5>
                        <p class="text-muted">
                            Enter your email address and we'll send you a link to reset your password.
                        </p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email address" autocomplete="email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>
                                Send Reset Link
                            </button>
                        </div>
                    </form>

                    <!-- Additional Information -->
                    <div class="card bg-light border-0 mb-3">
                        <div class="card-body p-3">
                            <h6 class="fw-bold text-primary mb-2">
                                <i class="fas fa-info-circle me-2"></i>
                                What happens next?
                            </h6>
                            <ul class="mb-0 small text-muted">
                                <li>We'll send a secure reset link to your email</li>
                                <li>Click the link to create a new password</li>
                                <li>The link expires in 24 hours for security</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Back to Login -->
                    <div class="text-center">
                        <p class="mb-2">Remember your password?</p>
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Sign In
                        </a>
                    </div>

                    <!-- Help Section -->
                    <hr class="my-4">
                    <div class="text-center">
                        <h6 class="mb-3">Need Help?</h6>
                        <div class="row">
                            <div class="col-6">
                                <div class="card border-light h-100">
                                    <div class="card-body text-center p-2">
                                        <i class="fas fa-clock fa-lg text-info mb-1"></i>
                                        <h6 class="small">Email Not Arriving?</h6>
                                        <p class="small text-muted mb-0">Check your spam folder</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card border-light h-100">
                                    <div class="card-body text-center p-2">
                                        <i class="fas fa-life-ring fa-lg text-info mb-1"></i>
                                        <h6 class="small">Still Having Issues?</h6>
                                        <a href="mailto:support@bulkybooks.com" class="btn btn-sm btn-outline-info">
                                            Contact Support
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
