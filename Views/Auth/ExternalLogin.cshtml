@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Complete Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-9">
            <div class="card shadow-lg border-0" style="border-radius: 15px; backdrop-filter: blur(10px);">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus text-primary mb-3" style="font-size: 3rem;"></i>
                        <h2 class="card-title fw-bold mb-2">Complete Your Registration</h2>
                        <p class="text-muted">
                            You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.<br>
                            Please confirm your account details to complete registration.
                        </p>
                    </div>

                    <!-- Form -->
                    <form asp-action="ExternalLoginConfirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <!-- Username Field -->
                        <div class="mb-4">
                            <label asp-for="UserName" class="form-label fw-semibold">
                                <i class="fas fa-at me-2 text-primary"></i>Username
                            </label>
                            <input asp-for="UserName" class="form-control form-control-lg" 
                                   style="border-radius: 10px; border: 2px solid #e9ecef;" 
                                   placeholder="Choose a unique username" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                            <small class="text-muted">This will be your unique identifier on BulkyBooks</small>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   style="border-radius: 10px; border: 2px solid #e9ecef;" 
                                   placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <small class="text-muted">We'll use this to verify your account</small>
                        </div>

                        <!-- Full Name Field -->
                        <div class="mb-4">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="fas fa-user me-2 text-primary"></i>Full Name
                            </label>
                            <input asp-for="FullName" class="form-control form-control-lg" 
                                   style="border-radius: 10px; border: 2px solid #e9ecef;" 
                                   placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-4">
                            <label asp-for="Role" class="form-label fw-semibold">
                                <i class="fas fa-users me-2 text-primary"></i>Role
                            </label>
                            <select asp-for="Role" class="form-select form-select-lg" 
                                    style="border-radius: 10px; border: 2px solid #e9ecef;">
                                <option value="User">User</option>
                                <option value="Author">Author</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <!-- Hidden Fields -->
                        <input asp-for="ReturnUrl" type="hidden" />
                        <input asp-for="LoginProvider" type="hidden" />

                        <!-- Error Messages -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <div asp-validation-summary="All" class="mb-0"></div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Submit Button -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold" 
                                    style="border-radius: 10px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
                                <i class="fas fa-check-circle me-2"></i>Complete Registration
                            </button>
                        </div>

                        <!-- Info Section -->
                        <div class="alert alert-info border-0" style="background-color: #e7f3ff; border-radius: 10px;">
                            <div class="d-flex">
                                <i class="fas fa-info-circle text-info me-3 mt-1"></i>
                                <div>
                                    <strong>Security Notice:</strong>
                                    <p class="mb-0 small">Your account will be automatically verified since you've authenticated through a trusted external provider.</p>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Back to Login Link -->
                    <div class="text-center mt-4">
                        <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add focus effects to form inputs
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#667eea';
                    this.style.boxShadow = '0 0 0 0.2rem rgba(102, 126, 234, 0.25)';
                });
                
                input.addEventListener('blur', function() {
                    this.style.borderColor = '#e9ecef';
                    this.style.boxShadow = 'none';
                });
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert-dismissible');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}
